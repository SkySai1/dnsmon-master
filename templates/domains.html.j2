{% extends "base.html.j2" %}
{% block title %}Домены{% endblock %}
{% block head %}
    {{ super() }}
    <script type="text/javascript" src="static/js/domains.js"></script>
    <style>
    </style>
{% endblock %}
{% block body %}

    <h1>Список доменов </h1>
    <div>
        <div>
            <p id="message"></p>
            <p id="hmsg" hidden></p>
            <form method="post" onsubmit="return false">
                <table>
                    <tr>
                        <td><p>{{form.domain()}}</p></td>
                        <td><button onclick="new_domain($(this.form).serializeArray(), '{{new}}')">Плюсик</button></td>
                        <td><input id="d_import" type="file" onchange="import_domain(this, '{{new}}')"> <label for="d_import">Импорт</label></td>
                    </tr>
                </table>
            </form>
        </div>
        <div>
            <input placeholder="Поиск" oninput="search_domain(this)">
            <hr>
            <table id="d_list">
                <tr>
                    <td></td><td><input type="checkbox"></td>
                    <td></td><td></td><td></td>
                    <td><input id="check_d_all" type="checkbox"></td>
                </tr>
                
                {% for domain, id, state in domains %}
                <script> </script>
                    <tr id="row_{{domain}}" class="row_d">
                        <td>{{loop.index0 + 1}}</td>
                        <td><input type="checkbox" {% if state %} checked {% endif %} onchange="console.log(switch_domain('{{domain}}', '{{sw}}', this.checked))"/></td>
                        <td><input id="d-{{loop.index0 + 1}}" value="{{domain}}" disabled></td>
                        <td><button id="d-ch-{{id}}" onclick="edit_domain('d-{{loop.index0 + 1}}', this, '{{edit}}')">Ручка</button></td>
                        <td><button onclick="mv_domain('{{loop.index0 + 1}}', '{{mv}}')">Корзина</button></td>
                        <td><input id="check_d-{{loop.index0 + 1}}" type="checkbox"></td>
                    </tr>
                {% endfor %}
            </table>
        </div>
    </div>

{% endblock %}